# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# HTML/CSS/JS files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Template files
*.hbs text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# Scripts
*.sh text eol=lf

# Windows specific
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
